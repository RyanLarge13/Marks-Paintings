generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AppStyle {
  id String @unique @default(uuid())
  buttonColor String
  accentColor String
  buttonHoverColor String
  textColorMain String
  textHoverColor String
}

model AppData {
  id String @unique @default(uuid())
  mainEmail String
  socialFacebook String
  socialTwitter String
  socialInstagram String
}

model AboutPageText {
  id String @unique @default(uuid())
  intro String
  desc String
}

model FrontPageText {
  id String @unique @default(uuid())
  intro String
  title String
  shortParagraph String
}

model Painting {
  id String @unique @default(uuid())
  categoryId String
  name String @unique
  type String
  author String
  headerImages String[] 
  price Float
  width Float
  height Float
  imageShowIndex Int
  salePrice Float @default(0.00)
  onSale Boolean @default(false)
  listedOn DateTime @default(now())
  listedTill DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  category Category @relation(fields: [categoryId], references: [id])
  visits PaintingVisit[]
}

model Frame {
  id String @unique @default(uuid())
  material String
  thickness Int
}

model Admin {
  id String @unique @default(uuid())
  username String @unique
  password String @unique
  email String @unique
  passwordExpires DateTime
  firstTimeLogin Boolean @default(true)
}

model PaintingVisit {
  id String @unique @default(uuid())
  paintingId String
  time DateTime @default(now())
  where String?
  painting Painting @relation(fields: [paintingId], references: [id])
}

model SiteVisit {
  id String @unique @default(uuid())
  time DateTime @default(now())
  where String?
  endTime DateTime?
  pagesVisited String[]
}

model Category {
  id String @unique @default(uuid())
  categoryName String
  createAt DateTime @default(now())
  paintings Painting[]
}