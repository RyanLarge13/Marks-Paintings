generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AppStyle {
  id String @unique @default(uuid())
  buttonColor String @default("#c2410c")
  accentColor String @default("#fdba74")
  buttonHoverColor String @default("#000")
  textColorMain String @default("#000")
  textHoverColor String @default("#fdba74")
}

model AppData {
  id String @unique @default(uuid())
  mainEmail String @default("Hello")
  socialFacebook String @default("Hello")
  socialTwitter String @default("Hello")
  socialInstagram String @default("Hello")
}

model AboutPageText {
  id String @unique @default(uuid())
  intro String @default("Hello")
  desc String @default("Hello")
}

model FrontPageText {
  id String @unique @default(uuid())
  intro String @default("Hello")
  title String @default("Hello")
  shortParagraph String @default("Hello")
}

model Painting {
  id String @unique @default(uuid())
  categoryId String
  name String @unique
  type String
  author String
  headerImages String[] 
  price Float
  width Float
  height Float
  imageShowIndex Int
  salePrice Float @default(0.00)
  onSale Boolean @default(false)
  listedOn DateTime @default(now())
  listedTill DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  category Category @relation(fields: [categoryId], references: [id])
  visits PaintingVisit[]
}

model Frame {
  id String @unique @default(uuid())
  material String
  thickness Int
}

model Admin {
  id String @unique @default(uuid())
  username String
  password String
  email String
  passwordExpires DateTime
  firstTimeLogin Boolean @default(true)
}

model PaintingVisit {
  id String @unique @default(uuid())
  paintingId String
  time DateTime @default(now())
  where String?
  painting Painting @relation(fields: [paintingId], references: [id])
}

model SiteVisit {
  id String @unique @default(uuid())
  time DateTime @default(now())
  where String?
  endTime DateTime?
  pagesVisited String[]
}

model Category {
  id String @unique @default(uuid())
  categoryName String
  createAt DateTime @default(now())
  paintings Painting[]
}